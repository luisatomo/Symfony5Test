{% extends 'base.html.twig' %}

{% block title %}Events{% endblock %}

{% block body %}
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin">Go To Admin Area</a></li>
            </ol>
        </nav>
        <h1>Events HomePage</h1>
        <table class="table">
            <thead>
                <th>Title</th>
                <th>Description</th>
                <th>Photo</th>
                <th>Video</th>
                <th>Calendar</th>
            </thead>
            <tbody>
                {% for event in events %}
                <tr>
                    <td>{{ event.title }}</td>
                    <td>{{ event.description }}</td>
                    <td><a href="{{ vich_uploader_asset(event, 'imageFile') }}" target="_blank">
                            <img
                                    width="50"
                                    src="{{ vich_uploader_asset(event, 'imageFile') }}" alt="{{ event.title }}" />
                        </a></td>
                    <td>{{ event.video }}</td>
                    <td>{{ event.calendar|date('Y-m-d H:i:s') }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
